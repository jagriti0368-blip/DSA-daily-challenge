// Problem: minimize max pair sum in array
// Platform: leetcode
// Approach: 2 pointer
// Time Complexity: O(n log n) use sorting
// Space Complexity: O(1)

class Solution {
public:
    int minPairSum(vector<int>& nums) {
        int maxi=INT_MIN;
        sort(nums.begin(),nums.end());
        int i=0;
        int j=nums.size()-1;
        while(i<j){
            maxi=max(maxi,nums[i]+nums[j]);
            i++;
            j--;
        }
       return maxi; 
    }
};
