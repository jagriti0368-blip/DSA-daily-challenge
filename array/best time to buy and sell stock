// Problem: best time to buy and sell stock
// Platform: leetcode
// Time Complexity: O(n)
// Space Complexity: O(1)



class Solution {
public:
    int maxProfit(vector<int>& prices) {
        int mini=prices[0];
        int profit=0;   
        for(int i=1;i<prices.size();i++){
            int cost=prices[i]-mini;
             profit=max(profit,cost);
            mini=min(prices[i],mini);
        }
    return profit;
    }
};
