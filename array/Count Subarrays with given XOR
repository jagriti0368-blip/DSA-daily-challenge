
// Problem: Count Subarrays with given XOR
// Platform: GFG
// Time Complexity: O(n log n)
// Space Complexity: O(n)

class Solution {
  public:
    long subarrayXor(vector<int> &arr, int k) {
        // code here
        map<int,int>mpp;
        int prefixor=0;
        int cnt=0;
       mpp[0]=1;
        for(int i=0;i<arr.size();i++){
              prefixor^=arr[i];
              int need=prefixor^k;
              cnt+=mpp[need];
              mpp[prefixor]++;
        }
      return cnt;  
    }
};
